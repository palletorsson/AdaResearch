script/source = "extends Node3D

@onready var hologram_projector = $MonitorBase/HologramProjector
@onready var hologram_display = $MonitorBase/HologramDisplay
@onready var base_lights = [$MonitorBase/BaseLight1, $MonitorBase/BaseLight2]

var display_active = false
var current_hologram = 'data_visualization'

signal hologram_activated
signal display_mode_changed

func _ready():
	setup_holographic_monitor()
	animate_hologram()

func setup_holographic_monitor():
	add_to_group('monitors')
	add_to_group('holographic_displays')

func animate_hologram():
	if display_active:
		var holo_tween = create_tween()
		holo_tween.set_loops()
		holo_tween.tween_property(hologram_display, 'scale', Vector3(1.1, 1.1, 1.1), 2.0)
		holo_tween.tween_property(hologram_display, 'scale', Vector3(0.9, 0.9, 0.9), 2.0)

func _on_area_3d_body_entered(body):
	if body.is_in_group('player'):
		activate_hologram()

func activate_hologram():
	display_active = true
	emit_signal('hologram_activated')
	
	var activation_tween = create_tween()
	activation_tween.tween_property(hologram_display, 'material_override:albedo_color:a', 0.6, 1.0)
"

